<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/util https://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <beans profile="default">
        <bean name="dataSource" class="org.h2.jdbcx.JdbcDataSource">
            <property name="url" value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1" />
            <property name="user" value="sa" />
            <property name="password" value="" />
        </bean>
        <bean id="flyway" class="org.flywaydb.core.Flyway" init-method="migrate">
            <property name="baselineOnMigrate" value="true" />
            <property name="locations" value="classpath:/db/migration/h2,classpath:/db/migration/common" />
            <property name="dataSource" ref="dataSource" />
        </bean>
    </beans>

    <beans profile="prod">
        <bean name="dataSource" class="org.postgresql.ds.PGSimpleDataSource">
            <property name="url" value="jdbc:postgresql://localhost:5432/postgres" />
            <property name="user" value="postgres" />
            <property name="password" value="password" />
            <property name="prepareThreshold" value="1"/>
            <property name="preparedStatementCacheQueries" value="1"/>
        </bean>
        <bean id="flyway" class="org.flywaydb.core.Flyway" init-method="migrate">
            <property name="baselineOnMigrate" value="true" />
            <property name="locations" value="classpath:/db/migration/postgress,classpath:/db/migration/common" />
            <property name="dataSource" ref="dataSource" />
        </bean>
    </beans>

    <beans>
        <bean id="jdbcConnectionHolder" class="org.transactional.JdbcConnectionHolder">
            <constructor-arg name="dataSource" ref="dataSource"/>
        </bean>

        <bean id="dogDao" class="org.dao.DBDogDao">
            <constructor-arg name="connectionHolder" ref="jdbcConnectionHolder"/>
        </bean>

        <bean id="simpleDogService" class="org.service.SimpleDogService">
            <property name="dogDao" ref="dogDao"/>
        </bean>

        <bean name="dogServiceClass" factory-bean="simpleDogService" factory-method="getClass"/>
        <bean name="transactionalInterceptor" class="org.transactional.TransactionalInterceptor">
            <constructor-arg name="connectionHolder" ref="jdbcConnectionHolder"/>
            <constructor-arg name="proxiedObject" ref="simpleDogService"/>
        </bean>
        <bean name="cGLibEnhancer" class="net.sf.cglib.proxy.Enhancer">
            <property name="superclass" ref="dogServiceClass"/>
            <property name="callback" ref="transactionalInterceptor"/>
         </bean>
        <bean name="transactionalProxyService" factory-bean="cGLibEnhancer" factory-method="create"/>

        <bean id="dogController" class="org.controller.DogController">
            <constructor-arg name="dogService" ref="transactionalProxyService"/>
        </bean>
        <bean name="jacksonObjectMapper" class="org.springframework.http.converter.json.Jackson2ObjectMapperFactoryBean"/>

        <mvc:annotation-driven>
            <mvc:message-converters>
                <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                    <property name="objectMapper" ref="jacksonObjectMapper" />
                </bean>
            </mvc:message-converters>
        </mvc:annotation-driven>
    </beans>
</beans>